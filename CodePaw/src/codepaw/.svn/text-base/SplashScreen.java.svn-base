    private FrameView prog;
    private SingleFrameApplication mainFrame;
    class LoadTask extends TimerTask{
        public void run(){
            switch(ProgressBar.getValue()){
            case 33:
                prog = new CodePawView(mainFrame);
                break;
            case 66:
                CodePawApp.getApplication().show(prog);
                break;
            case 100:
                 this.cancel();
                 dispose();
                 break;
            }
            ProgressBar.setValue(ProgressBar.getValue()+1);
        }
    }
